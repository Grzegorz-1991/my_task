<div class="content">
    <div class="row justify-content-center row-all-screen align-items-center">
        <%= form_with model: @person, url: @edit_new, class: "shadow p-3 bg-secondary rounded col-8", local: true do |f| %>
            <div class="row mb-3">
                <%= f.label :name,'Imię', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :name, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :surname,'Nazwisko', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :surname, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :email,'E-mail', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :email, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :telephone,'Telefon', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :telephone, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :position,'Stanowisko', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :position, class:'form-control' %>
                </div>
            </div>
            <p>
                <%= f.submit "#{@new_edit_btn}",class:'btn btn-success' %>
                <%= link_to "Powrót",person_index_path,class:'btn btn-info' %>
            </p>
        <% end %>
    </div>
</div>