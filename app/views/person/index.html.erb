<div class="container">
    <div class="content">
        <div class="row justify-content-center row-all-screen align-items-center">
            <div class="row d-block col-12">
                <div class="row justify-content-end mb-2">
                    <%= link_to 'Nowy', new_person_path, class: 'btn btn-success' %>
                </div>
                <table class="table table-striped table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Stanowisko</th>
                            <th>Funkcje</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @person.each do |person| %>
                        <tr>
                            <td><%= person.name %></td>
                            <td><%= person.surname %></td>
                            <td><%= person.email %></td>
                            <td><%= person.telephone %></td>
                            <td><%= person.position %></td>
                            <td class="col-3 text-center">
                                <%= link_to "Edytuj", edit_person_path(person), class: "btn btn-outline-info mr-3" %>
                                <%= link_to "Usuń", person_path(person), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Na pewno usunąć?"} %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>