<div class="container">
    <div class="content">
        <div class="row justify-content-center row-all-screen align-items-center">
            <div class="row d-block col-12">
                <div class="row justify-content-end mb-2">
                    <%= link_to 'Nowy', new_task_path, class: 'btn btn-success' %>
                </div>
                <table class="table table-striped table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>Stan</th>
                            <th>Opis</th>
                            <th>Data przyjęcia</th>
                            <th>Data rozpoczęcia</th>
                            <th>Data zakończenia</th>
                            <th>Funkcje</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @task.each do |task| %>
                        <tr>
                            <td><%= task.state %></td>
                            <td><%= task.descripton %></td>
                            <td><%= l task.date_of_order, :format => '%F',default: '-'  %></td>
                            <td><%= l task.start_date, :format => '%F',default: '-' %></td>
                            <td><%= l task.end_time, :format => '%F',default: '-'  %></td>
                            <td class="col-3 text-center">
                                <%= link_to "Edytuj", edit_task_path(task), class: "btn btn-outline-info mr-3" %>
                                <%= link_to "Usuń", task_path(task), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Na pewno usunąć?"} %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>