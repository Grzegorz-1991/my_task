<div class="content">
    <div class="row justify-content-center row-all-screen align-items-center">
        <%= form_with model: @task, url: @edit_new, class: "shadow p-3 bg-secondary rounded col-8", local: true do |f| %>
            <div class="row mb-3">
                <%= f.label :state,'Stan', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :state, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :descripton,'Opis', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.text_field :descripton, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :date_of_order,'Data przyjęcia', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.date_field :date_of_order, class:'form-control' %>
                </div>
            </div>
            <div class="row mb-3">
                <%= f.label :start_date,'Data rozpoczęcia', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.date_field :start_date, class:'form-control' %>
                </div>

            </div>
            <div class="row mb-3">
                <%= f.label :end_date,'Data zakończenia', class:'col-sm-2 col-form-label text-light' %>
                <div class="col-sm-10">
                    <%= f.date_field :end_date, class:'form-control' %>
                </div>
            </div>
            <p>
                <%= f.submit "#{@new_edit_btn}",class:'btn btn-success' %>
                <%= link_to "Powrót",task_index_path,class:'btn btn-info' %>
            </p>
        <% end %>
    </div>
</div>


